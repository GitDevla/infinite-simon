{
    "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
    "vcs": {
        "enabled": false,
        "clientKind": "git",
        "useIgnoreFile": false
    },
    "files": {
        "ignoreUnknown": false
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "tab",
        "indentWidth": 4,
        "lineWidth": 120
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "complexity": {
                "noStaticOnlyClass": "off"
            },
            "suspicious": {
                "noConfusingVoidType": "off",
                "noExplicitAny": "off",
                "noArrayIndexKey": "off"
            }
        }
    },
    "javascript": {
        "formatter": {
            "enabled": true,
            "arrowParentheses": "asNeeded",
            "bracketSameLine": true,
            "bracketSpacing": false,
            "quoteStyle": "double",
            "semicolons": "always",
            "trailingCommas": "all"
        }
    },
    "assist": {
        "enabled": true,
        "actions": {
            "source": {
                "organizeImports": "on"
            }
        }
    }
}
